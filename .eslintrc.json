{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "@typescript-eslint/ban-types": [
            "error",
            {
              "types": {
                "{}": false
              },
              "extendDefaults": true
            }
          ],
        "@typescript-eslint/space-before-function-paren": "off",
        "@typescript-eslint/no-misused-promises": "off"
    }
}
